load("//bazel:mongo_src_rules.bzl", "mongo_cc_library")

package(default_visibility = ["//visibility:public"])

exports_files(
    glob([
        "*.h",
        "*.cpp",
    ]),
)

mongo_cc_library(
    name = "externalsaslauth",
    srcs = [
        "awsiam_server_mechanism.cpp",
        "cyrus_sasl_server_session.cpp",
        "external_sasl_authentication_session.cpp",
        "gssapi_server_mechanism.cpp",
        "sasl_oidc_server_mechanism.cpp",
    ],
    hdrs = [
        "awsiam_server_mechanism.h",
        "cyrus_sasl_server_session.h",
        "external_sasl_authentication_session.h",
        "gssapi_server_mechanism.h",
        "sasl_oidc_server_mechanism.h",
    ],
    deps = [
        "//src/mongo/db/auth:saslauth",
        "//src/mongo/db/ldap:ldap_manager",
        "//src/mongo/db:ldap_options",
        "//src/mongo/db:service_context",
        "//src/mongo/util/net:http_client",
    ] + select({
        "//bazel/config:ssl_enabled": [
            "//src/mongo/client:sasl_aws_common",
        ],
        "//conditions:default": [],
    }),
    linkopts = [
        "-lgssapi_krb5",
        "-lldap",
        "-lsasl2",
    ],
)
